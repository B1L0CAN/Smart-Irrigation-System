<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/white">

    <!-- Tarih ve Saat Gösterimi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_medium"
            android:textSize="14sp"
            tools:text="12 Mayıs 2023" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="@color/text_medium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_medium"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="14:23:05" />

    </LinearLayout>

    <!-- Log Mesajı -->
    <TextView
        android:id="@+id/tvLogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Vana açıldı, süre: 25 dakika 35 saniye" />

    <!-- Log Detayları -->
    <TextView
        android:id="@+id/tvLogDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_dark"
        android:textSize="14sp"
        tools:text="Başlangıç Değerleri: Nem: %45, Sıcaklık: 29°C, Su Miktarı: 0.0L, Batarya: %85" />

</LinearLayout> 